<?xml version="1.0" encoding="utf-8"?>



<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/trailer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/play_imageview"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/play_imageview"
        app:layout_constraintBottom_toTopOf="@+id/play_imageview"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/play_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/bottom_row_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@android:color/darker_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/play_imageview"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginRight="2dp"
        app:layout_constraintRight_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
