<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="movie"
            type="org.jkarsten.popularmovie.popularmovies.data.Movie"/>
    </data>

    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.jkarsten.popularmovie.popularmovies.movie.MovieActivity">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/moviePosterImageVIew"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/movie_poster_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieTitleTextView"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/movieTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textAppearance="@android:style/TextAppearance.Large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/mock_title"
                android:text="@{movie.title}"/>

            <TextView
                android:id="@+id/yearTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                app:layout_constraintLeft_toRightOf="@+id/moviePosterImageVIew"
                app:layout_constraintTop_toTopOf="@+id/moviePosterImageVIew"
                android:text="@{movie.year}"
                tools:text="@string/mock_year"/>

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textAppearance="@android:style/TextAppearance.Small"
                app:layout_constraintLeft_toLeftOf="@+id/yearTextView"
                app:layout_constraintTop_toBottomOf="@+id/yearTextView"
                tools:text="@string/mock_rating"
                android:text="@{movie.topAverage}"/>

            <TextView
                android:id="@+id/overviewTextView"
                android:layout_width="@dimen/overviewWidth"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="32dp"
                app:layout_constraintLeft_toLeftOf="@+id/moviePosterImageVIew"
                app:layout_constraintTop_toBottomOf="@+id/moviePosterImageVIew"
                tools:text="@string/lorem_ipsum"
                android:text="@{movie.overview}"/>

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mark_as_fav_toggle"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/ratingTextView"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ratingTextView"
                android:checked="@{movie.markAsFavorite}"
                android:onClick="onMarkAsFavoriteToggle"/>
        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</layout>